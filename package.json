{
    "name": "dockerfile-generator",
    "version": "1.0.0",
    "description": "A CLI tool to generate Dockerfiles using OpenAI API",
    "main": "dist/index.js",
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "tsc",
        "dev": "ts-node-dev --respawn src/index.ts",
        "lint": "eslint . --ext .ts",
        "test": "jest"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "dockerode": "^4.0.3",
        "dotenv": "^16.0.3",
        "fs-extra": "^11.2.0",
        "openai": "^4.28.0"
    },
    "devDependencies": {
        "@types/dockerode": "^3.3.34",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.4"
    }
}
